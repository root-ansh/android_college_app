<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
  >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_grey_accent"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coursename_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/coursename"

                android:text="Course-name"
                android:textColor="#4900b7"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Degree          :"
                    android:textColor="#2c40af"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/degree_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="value"
                    android:textColor="#2c40af"
                    android:textSize="15dp"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration       :"
                    android:textColor="#2c40af"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/duration_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="value"
                    android:textColor="#2c40af"
                    android:textSize="15dp"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligibility      :"
                    android:textColor="#2c40af"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/eligibility_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="value"
                    android:textColor="#2c40af"
                    android:textSize="15dp"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exams          :"
                    android:textColor="#2c40af"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/exams_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="value"
                    android:textColor="#2c40af"
                    android:textSize="15dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Fees:"
                    android:textColor="#2c40af"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/coursefees_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="value"
                    android:textColor="#2c40af"
                    android:textSize="15dp"></TextView>

            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>




</FrameLayout>