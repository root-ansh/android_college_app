<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#00ffffff"
    android:layout_marginBottom="20dp"
    >

    <ImageView

        android:layout_width="40dp"
        android:layout_height="60dp"

        android:layout_gravity="top"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_professor" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/teachername_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_white"
                android:textSize="15dp"
                android:textStyle="bold"

                android:layout_margin="5dp"

                android:text="Shekhar Sr." />
            <TextView
                android:id="@+id/date_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/color_white"
                android:gravity="center"

                android:text="Date" />

        </LinearLayout>
        <TextView
            android:id="@+id/announcementminidisp_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@color/color_white"
            android:textSize="12dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Announcement"
            />
        <LinearLayout
            android:id="@+id/main_announcementShowHide_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:focusable="true"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:text="files" />
            <TextView
                android:id="@+id/files_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/pinkAccent"
                android:autoLink="web"
                android:text="here or none" />
            <ImageView
                android:src="@drawable/ic_save_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:layout_gravity="center"
                android:text="add files" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>